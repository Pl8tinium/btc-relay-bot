{
  "compilerOptions": {
    "target": "ES2020",  // or a suitable target for your Node.js version
    "module": "ES2020",  // ensures ES modules are used
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true, // if using decorators
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
